@model TrungTamQuanLiDT.ViewModel.RegisterViewModel

<h2>Đăng ký tài khoản</h2>

<form asp-action="Register" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="TaiKhoan"></label>
        <input asp-for="TaiKhoan" class="form-control" />
        <span asp-validation-for="TaiKhoan" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MatKhau"></label>
        <input asp-for="MatKhau" type="password" class="form-control" />
        <span asp-validation-for="MatKhau" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Đăng ký</button>
</form>