@model TrungTamQuanLiDT.Models.DangKyKhoaHocModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Đăng ký khóa học";
}

<h2>Đăng ký khóa học</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="MaHocVien">Học viên</label>
        <select asp-for="MaHocVien" class="form-control" asp-items="ViewBag.HocVienList">
            <option value="">-- Chọn học viên --</option>
        </select>
        <span asp-validation-for="MaHocVien" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MaKhoaHoc">Khóa học</label>
        <select asp-for="MaKhoaHoc" class="form-control" asp-items="ViewBag.KhoaHocList">
            <option value="">-- Chọn khóa học --</option>
        </select>
        <span asp-validation-for="MaKhoaHoc" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Đăng ký</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}