@model TrungTamQuanLiDT.Models.DangKyKhoaHocModel

@{
    ViewData["Title"] = "Đăng ký khóa học";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h2 class="mb-3">Đăng ký khóa học</h2>
            <hr />
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create" method="post">
                <div class="form-group mb-3">
                    <label asp-for="MaHocVien" class="form-label">Học viên</label>
                    <select asp-for="MaHocVien" class="form-control" asp-items="ViewBag.HocVienList">
                        <option value="">-- Chọn học viên --</option>
                    </select>
                    <span asp-validation-for="MaHocVien" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="MaKhoaHoc" class="form-label">Khóa học</label>
                    <select asp-for="MaKhoaHoc" class="form-control" asp-items="ViewBag.KhoaHocList">
                        <option value="">-- Chọn khóa học --</option>
                    </select>
                    <span asp-validation-for="MaKhoaHoc" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-end">
                    <a asp-action="Index" class="btn btn-secondary me-2">
                        <i class="fas fa-arrow-left me-2"></i>Quay lại
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i>Đăng ký
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}