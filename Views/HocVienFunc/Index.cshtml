@model TrungTamQuanLiDT.Models.UserModel

@{
    ViewData["Title"] = "Thông tin học viên";
}

<!-- Thêm Google Fonts để tạo font chữ đẹp -->
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">

<!-- Thêm CSS cho hiệu ứng hover -->
<style>
    .profile-card {
        transition: transform 0.3s ease;
    }

        .profile-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
        }
</style>

<div class="container mt-5" style="font-family: 'Poppins', sans-serif;">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <h2 class="text-center mb-4 fw-bold" style="color: #1a2a44;">Thông tin cá nhân</h2>

            <!-- Card hiển thị thông tin học viên -->
            <div class="card profile-card shadow-lg p-4 mb-4" style="background: linear-gradient(180deg, #f8f9fa 0%, #e9ecef 100%); border-radius: 1rem;">
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-4 fw-semibold" style="color: #2e4b6a;">Họ tên</div>
                        <div class="col-md-8" style="color: #1a2a44;">@Model.HoTen</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 fw-semibold" style="color: #2e4b6a;">Email</div>
                        <div class="col-md-8" style="color: #1a2a44;">@Model.Email</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 fw-semibold" style="color: #2e4b6a;">Số điện thoại</div>
                        <div class="col-md-8" style="color: #1a2a44;">@Model.SDT</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 fw-semibold" style="color: #2e4b6a;">Ngày sinh</div>
                        <div class="col-md-8" style="color: #1a2a44;">@Model.NgaySinh.ToString("dd/MM/yyyy")</div>
                    </div>
                </div>
            </div>

            <!-- Nút chỉnh sửa -->
            <div class="d-grid">
                <a asp-controller="HocVienFunc" asp-action="Edit" class="btn btn-primary btn-lg"
                   style="background: linear-gradient(90deg, #007bff 0%, #0056b3 100%); border: none; transition: all 0.3s ease;"
                   onmouseover="this.style.opacity='0.9';"
                   onmouseout="this.style.opacity='1';">
                    Chỉnh sửa thông tin
                </a>
            </div>
        </div>
    </div>
</div>