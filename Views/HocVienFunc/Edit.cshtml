@model TrungTamQuanLiDT.Models.UserModel

@{
    ViewData["Title"] = "Chỉnh sửa thông tin";
}

<!-- Thêm Google Fonts để tạo font chữ đẹp -->
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">

<!-- Thêm jQuery từ CDN -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

<!-- Thêm CSS cho hiệu ứng hover -->
<style>
    .form-card {
        transition: transform 0.3s ease;
    }

        .form-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
        }

    .form-control {
        border-radius: 0.5rem;
        transition: border-color 0.3s ease;
    }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
        }

    .form-label {
        color: #2e4b6a;
        font-weight: 500;
    }
</style>

<div class="container mt-5" style="font-family: 'Poppins', sans-serif;">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <h2 class="text-center mb-4 fw-bold" style="color: #1a2a44;">Chỉnh sửa thông tin cá nhân</h2>

            <!-- Card bọc form chỉnh sửa -->
            <div class="card form-card shadow-lg p-4 mb-4" style="background: linear-gradient(180deg, #f8f9fa 0%, #e9ecef 100%); border-radius: 1rem;">
                <div class="card-body">
                    <!-- Div hiển thị thông báo -->
                    <div id="message" class="alert text-center rounded py-3" style="display: none; font-weight: 500;"></div>

                    <form id="editForm" method="post" asp-action="Edit" asp-controller="HocVienFunc">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="MaHocVien" />

                        <div class="mb-3">
                            <label asp-for="HoTen" class="form-label"></label>
                            <input asp-for="HoTen" class="form-control" placeholder="Nhập họ tên" />
                            <span asp-validation-for="HoTen" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control" placeholder="Nhập email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="SDT" class="form-label"></label>
                            <input asp-for="SDT" class="form-control" placeholder="Nhập số điện thoại" />
                            <span asp-validation-for="SDT" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="NgaySinh" class="form-label"></label>
                            <input asp-for="NgaySinh" type="date" class="form-control" />
                            <span asp-validation-for="NgaySinh" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-end gap-2">
                            <button type="submit" class="btn btn-success"
                                    style="background: linear-gradient(90deg, #28a745 0%, #218838 100%); border: none; transition: all 0.3s ease;"
                                    onmouseover="this.style.opacity='0.9';"
                                    onmouseout="this.style.opacity='1';">
                                Lưu thay đổi
                            </button>
                            <a asp-action="Index" asp-controller="HocVienFunc" class="btn btn-secondary"
                               style="background: linear-gradient(90deg, #6c757d 0%, #5a6268 100%); border: none; transition: all 0.3s ease;"
                               onmouseover="this.style.opacity='0.9';"
                               onmouseout="this.style.opacity='1';">
                                Hủy
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}