@model TrungTamQuanLiDT.Models.UserModel

@{
    ViewData["Title"] = "Sửa thông tin học viên";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h1 class="mb-3">Sửa thông tin học viên</h1>
            <hr />
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card">
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="MaHocVien" />

                        <div class="mb-3">
                            <label asp-for="HoTen" class="form-label fw-bold"></label>
                            <input asp-for="HoTen" class="form-control" placeholder="Nhập họ tên" />
                            <span asp-validation-for="HoTen" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="TaiKhoan" class="form-label fw-bold"></label>
                            <input asp-for="TaiKhoan" class="form-control" placeholder="Nhập tài khoản" />
                            <span asp-validation-for="TaiKhoan" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="MatKhau" class="form-label fw-bold"></label>
                            <input asp-for="MatKhau" type="password" class="form-control" placeholder="Nhập mật khẩu mới (nếu muốn thay đổi)" />
                            <span asp-validation-for="MatKhau" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-bold"></label>
                            <input asp-for="Email" type="email" class="form-control" placeholder="Nhập email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="SDT" class="form-label fw-bold"></label>
                            <input asp-for="SDT" type="tel" class="form-control" placeholder="Nhập số điện thoại" />
                            <span asp-validation-for="SDT" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="NgaySinh" class="form-label fw-bold"></label>
                            <input asp-for="NgaySinh" type="date" class="form-control" />
                            <span asp-validation-for="NgaySinh" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Quay lại
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Lưu
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}