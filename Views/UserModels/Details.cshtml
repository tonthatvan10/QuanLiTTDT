@model TrungTamQuanLiDT.Models.UserModel

@{
    ViewData["Title"] = "Chi tiết học viên";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h1 class="mb-3">Chi tiết học viên</h1>
            <hr />
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card">
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="MaHocVien" />
                        <div class="row mb-3">
                            <label for="HoTen" class="col-sm-4 col-form-label fw-bold">Họ Tên</label>
                            <div class="col-sm-8">
                                <input asp-for="HoTen" class="form-control" placeholder="Nhập họ tên" />
                                <span asp-validation-for="HoTen" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="TaiKhoan" class="col-sm-4 col-form-label fw-bold">Tài Khoản</label>
                            <div class="col-sm-8">
                                <input asp-for="TaiKhoan" class="form-control" placeholder="Nhập tài khoản" />
                                <span asp-validation-for="TaiKhoan" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="Email" class="col-sm-4 col-form-label fw-bold">Email</label>
                            <div class="col-sm-8">
                                <input asp-for="Email" class="form-control" placeholder="Nhập email" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="SDT" class="col-sm-4 col-form-label fw-bold">Số Điện Thoại</label>
                            <div class="col-sm-8">
                                <input asp-for="SDT" class="form-control" placeholder="Nhập số điện thoại" />
                                <span asp-validation-for="SDT" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="NgaySinh" class="col-sm-4 col-form-label fw-bold">Ngày Sinh</label>
                            <div class="col-sm-8">
                                <input asp-for="NgaySinh" class="form-control" type="date" />
                                <span asp-validation-for="NgaySinh" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Quay lại
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Lưu
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
}