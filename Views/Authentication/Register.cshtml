@model TrungTamQuanLiDT.ViewModel.RegisterViewModel

@{
    ViewData["Title"] = "Đăng ký tài khoản";
}

<!-- Thêm Google Fonts để tạo font chữ đẹp -->
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">

<div class="container mt-5" style="font-family: 'Poppins', sans-serif;">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <!-- Sử dụng card để bọc form, bo góc mượt mà -->
            <div class="card shadow-lg p-4" style="background: linear-gradient(180deg, #f8f9fa 0%, #e9ecef 100%); border-radius: 1rem;">
                <div class="card-body">
                    <h2 class="text-center mb-4 fw-bold" style="color: #1a2a44;">Đăng ký tài khoản</h2>
                    <hr class="mb-4" style="border-color: #2e4b6a;">

                    <form asp-action="Register" method="post">
                        @Html.AntiForgeryToken()

                        <!-- Hiển thị lỗi tổng hợp -->
                        <div asp-validation-summary="ModelOnly" class="text-danger text-center mb-3"></div>

                        <!-- Tài khoản -->
                        <div class="mb-3">
                            <label asp-for="TaiKhoan" class="form-label fw-semibold" style="color: #2e4b6a;"></label>
                            <input asp-for="TaiKhoan" class="form-control form-control-lg" placeholder="Nhập email" style="border-color: #2e4b6a;" />
                            <span asp-validation-for="TaiKhoan" class="text-danger"></span>
                        </div>

                        <!-- Mật khẩu -->
                        <div class="mb-3">
                            <label asp-for="MatKhau" class="form-label fw-semibold" style="color: #2e4b6a;"></label>
                            <input asp-for="MatKhau" type="password" class="form-control form-control-lg" placeholder="Nhập mật khẩu" style="border-color: #2e4b6a;" />
                            <span asp-validation-for="MatKhau" class="text-danger"></span>
                        </div>

                        <!-- Xác nhận mật khẩu -->
                        <div class="mb-3">
                            <label asp-for="MatKhauXacNhan" class="form-label fw-semibold" style="color: #2e4b6a;"></label>
                            <input asp-for="MatKhauXacNhan" type="password" class="form-control form-control-lg" placeholder="Nhập lại mật khẩu" style="border-color: #2e4b6a;" />
                            <span asp-validation-for="MatKhauXacNhan" class="text-danger"></span>
                        </div>

                        <!-- Nút submit -->
                        <div class="d-grid mb-4">
                            <button type="submit" class="btn btn-primary btn-lg"
                                    style="background: linear-gradient(90deg, #2e4b6a 0%, #1a2a44 100%); border: none; transition: all 0.3s ease;"
                                    onmouseover="this.style.opacity='0.9';"
                                    onmouseout="this.style.opacity='1';">
                                Đăng ký
                            </button>
                        </div>

                        <!-- Link phụ -->
                        <div class="text-center">
                            <a asp-action="Login" class="text-decoration-none" style="color: #2e4b6a;">Đã có tài khoản? Đăng nhập</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>