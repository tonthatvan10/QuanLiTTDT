@model TrungTamQuanLiDT.ViewModel.RegisterViewModel

<div style="display: flex; justify-content: center;">
    <h2>Đăng ký tài khoản</h2>
</div>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center">@ViewData["Title"]</h2>
            <hr />

            <form asp-action="Register" method="post">
                @Html.AntiForgeryToken()

                <!-- Hiển thị lỗi tổng hợp (nếu có) -->
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <!-- Tài khoản -->
                <div class="form-group" style="margin-bottom: 10px">
                    <label asp-for="TaiKhoan" class="control-label"></label>
                    <input asp-for="TaiKhoan" class="form-control" placeholder="Nhập email" />
                    <span asp-validation-for="TaiKhoan" class="text-danger"></span>
                </div>

                <!-- Mật khẩu -->
                <div class="form-group" style="margin-bottom: 10px">
                    <label asp-for="MatKhau" class="control-label"></label>
                    <input asp-for="MatKhau" type="password" class="form-control" placeholder="Nhập mật khẩu" />
                    <span asp-validation-for="MatKhau" class="text-danger"></span>
                </div>

                <!-- Xác nhận mật khẩu -->
                <div class="form-group" style="margin-bottom: 10px">
                    <label asp-for="MatKhauXacNhan" class="control-label"></label>
                    <input asp-for="MatKhauXacNhan" type="password" class="form-control" placeholder="Nhập lại mật khẩu" />
                    <span asp-validation-for="MatKhauXacNhan" class="text-danger"></span>
                </div>

                <!-- Nút submit -->
                <div class="form-group" style="margin-bottom: 10px">
                    <button type="submit" class="btn btn-primary btn-block">Đăng ký</button>
                </div>

                <!-- Link phụ -->
                <div class="text-center" style="margin-bottom: 10px">
                    <a asp-action="Login">Đã có tài khoản? Đăng nhập</a>
                </div>
            </form>
        </div>
    </div>
</div>