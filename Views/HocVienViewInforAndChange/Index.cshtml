@model TrungTamQuanLiDT.Models.UserModel
@{
    ViewData["Title"] = "Thông tin học viên";
}

<h2 class="text-xl font-semibold mb-4">Thông tin cá nhân</h2>

<div class="border rounded p-4 bg-light shadow-sm w-50">
    <p><strong>Họ tên:</strong> @Model.HoTen</p>
    <p><strong>Tài khoản:</strong> @Model.TaiKhoan</p>
    <p><strong>Email:</strong> @Model.Email</p>
    <p><strong>Số điện thoại:</strong> @Model.SDT</p>
    <p><strong>Ngày sinh:</strong> @Model.NgaySinh.ToString("dd/MM/yyyy")</p>
    <p><strong>Vai trò:</strong> @Model.Role</p>
</div>

<div class="mt-3">
    <a asp-controller="HocVienViewInforAndChange" asp-action="Edit" class="btn btn-primary">Chỉnh sửa</a>
</div>