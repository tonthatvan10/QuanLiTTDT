@using X.PagedList.Mvc.Core
@using X.PagedList
@model IPagedList<TrungTamQuanLiDT.Models.KhoaHocModel>

@{
    ViewData["Title"] = "Danh sách khóa học";
}

<h1>Danh sách khóa học</h1>
<h2>Chào mừng @User.Identity.Name!</h2>

@if (!string.IsNullOrEmpty(ViewBag.Message))
{
    <div class="alert alert-info">@ViewBag.Message</div>
}

<!-- Form lọc -->
<form asp-action="Privacy" method="get" class="mb-4">
    <div class="row">
        <div class="col-md-3">
            <input type="text" name="searchString" value="@ViewBag.SearchString" class="form-control" placeholder="Tên khóa học" />
        </div>
        <div class="col-md-3">
            <select name="giangVien" class="form-control">
                <option value="">Tất cả giảng viên</option>
                @foreach (var gv in ViewBag.GiangViens)
                {
                    <option value="@gv" selected="@(gv == ViewBag.GiangVienSelected ? "selected" : null)">@gv</option>
                }
            </select>
        </div>
        <div class="col-md-2">
            <input type="date" name="fromDate" value="@ViewBag.FromDate" class="form-control" />
        </div>
        <div class="col-md-2">
            <input type="date" name="toDate" value="@ViewBag.ToDate" class="form-control" />
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-primary">Lọc</button>
        </div>
    </div>
</form>

<!-- Danh sách khóa học -->
<table class="table">
    <thead>
        <tr>
            <th>Tên khóa học</th>
            <th>Giảng viên</th>
            <th>Khai giảng</th>
            <th>Kết thúc</th>
            <th>Học phí</th>
            <th>Số lượng tối đa</th>
            <th>Chi tiết</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var khoaHoc in Model)
        {
            <tr>
                <td>@khoaHoc.TenKhoaHoc</td>
                <td>@khoaHoc.GiangVien</td>
                <td>@khoaHoc.ThoiGianKhaiGiang.ToString("dd/MM/yyyy")</td>
                <td>@khoaHoc.ThoiGianKetThuc.ToString("dd/MM/yyyy")</td>
                <td>@khoaHoc.HocPhi.ToString("C", new System.Globalization.CultureInfo("vi-VN"))</td>
                <td>@khoaHoc.SoLuongHocVienToiDa</td>
                <td><a asp-controller="ThongTinKhoaHoc" asp-action="Details" asp-route-id="@khoaHoc.MaKhoaHoc">Xem chi tiết</a></td>
            </tr>
        }
    </tbody>
</table>

<!-- Phân trang -->
@Html.PagedListPager(Model, page => Url.Action("Privacy", new { page, searchString = ViewBag.SearchString, giangVien = ViewBag.GiangVienSelected, fromDate = ViewBag.FromDate,  toDate = ViewBag.ToDate }))