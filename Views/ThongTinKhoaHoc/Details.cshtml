@model TrungTamQuanLiDT.Models.KhoaHocModel

@{
    ViewData["Title"] = "Chi tiết khóa học";
}

<h2>Chi tiết khóa học</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-info">
        @TempData["Message"]
    </div>
}

<table class="table table-bordered">
    <tr>
        <th>Tên khóa học</th>
        <td>@Model.TenKhoaHoc</td>
    </tr>
    <tr>
        <th>Giảng viên</th>
        <td>@Model.GiangVien</td>
    </tr>
    <tr>
        <th>Khai giảng</th>
        <td>@Model.ThoiGianKhaiGiang.ToString("dd/MM/yyyy")</td>
    </tr>
    <tr>
        <th>Kết thúc</th>
        <td>@Model.ThoiGianKetThuc.ToString("dd/MM/yyyy")</td>
    </tr>
    <tr>
        <th>Học phí</th>
        <td>@Model.HocPhi.ToString("C", new System.Globalization.CultureInfo("vi-VN"))</td>
    </tr>
    <tr>
        <th>Số lượng tối đa</th>
        <td>@Model.SoLuongHocVienToiDa</td>
    </tr>
</table>

@if (User.IsInRole("HocVien"))
{
    <form asp-action="DangKy" asp-route-khoaHocId="@Model.MaKhoaHoc" method="post">
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-success">Đăng ký khóa học</button>
    </form>
}
else
{
    <div class="alert alert-warning">Chỉ học viên mới có thể đăng ký khóa học.</div>
}

<a asp-action="Privacy" asp-controller="Home" class="btn btn-secondary mt-3">← Quay lại danh sách</a>
