@model IEnumerable<TrungTamQuanLiDT.Models.KhoaHocModel>

<h2>Các khóa học đã kết thúc bạn từng tham gia</h2>

@if (!Model.Any())
{
    <p>Bạn chưa có khóa học nào đã hết hạn.</p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Tên khóa học</th>
                <th>Giảng viên</th>
                <th>Ngày khai giảng</th>
                <th>Ngày kết thúc</th>
                <th>Học phí</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var kh in Model)
            {
                <tr>
                    <td>@kh.TenKhoaHoc</td>
                    <td>@kh.GiangVien</td>
                    <td>@kh.ThoiGianKhaiGiang.ToString("dd/MM/yyyy")</td>
                    <td>@kh.ThoiGianKetThuc.ToString("dd/MM/yyyy")</td>
                    <td>@kh.HocPhi.ToString("C0")</td>
                </tr>
            }
        </tbody>
    </table>
}
